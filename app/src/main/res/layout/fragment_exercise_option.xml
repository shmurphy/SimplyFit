<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/exercise_option_fragment"
    tools:context="shmurphy.tacoma.uw.edu.simplyfitter.ExerciseOptionFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What type of exercise are you logging?"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/type_exercise_textview"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="            Aerobic = runs, walks, swims, etc \n
            Strength = squats, bench press, etc\n
            Flexibility = yoga, stretching, etc"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exercise"
        android:id="@+id/exercise_option_button"
        android:layout_gravity="right|center_vertical" />

    <Spinner
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:id="@+id/exercise_spinner"
        android:layout_gravity="center" />
</FrameLayout>
