<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/add_aerobic_fragment"
    tools:context=".AddAerobicFragment"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exercise_name"
        android:textSize="30sp"
        android:id="@+id/exercise_name"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/exercise_name_hint"
        android:textAlignment="center"
        android:paddingTop="30dp"
        android:id="@+id/add_aerobic_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="30dp"
        android:id="@+id/exercise_duration_text"
        android:layout_gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_aerobic_hours"
            android:layout_gravity="center|left"
            android:inputType="number"
            android:textAlignment="center"
            android:hint="@string/exercise_hours_hint" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_aerobic_minutes"
            android:hint="@string/exercise_minutes_hint"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and"
            android:textSize="20sp"
            android:id="@+id/aerobic_and_text"
            android:layout_gravity="center" />

    </FrameLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoga pose?"
        android:id="@+id/checkBox_yoga"
        android:layout_gravity="center_horizontal"
        android:checked="false" />

    <Button
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_aerobic_button"
        android:layout_gravity="center"
        android:text="@string/add_exercise_button"
        android:paddingBottom="20dp"
        android:textAllCaps="false"
        android:onClick="addAerobicExercise" />

</LinearLayout>
